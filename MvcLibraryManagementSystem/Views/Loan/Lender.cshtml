@model MvcLibraryManagementSystem.Models.Entity.TBLACTING
@{
    ViewBag.Title = "Lender";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-group" method="post">
    <div style="margin-top:15px">
        @Html.Label("Üye")
        @*@Html.TextBoxFor(x => x.Member, new { @class = "form-control" })*@
        @Html.DropDownListFor(x => x.TBLMEMBER.MemberID, (List<SelectListItem>)ViewBag.val1, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        @Html.Label("Kitap")
        @*@Html.TextBoxFor(x => x.Book, new { @class = "form-control" })*@
        @Html.DropDownListFor(x => x.TBLBOOK.BookID, (List<SelectListItem>)ViewBag.val2, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        @Html.Label("Personel")
        @*@Html.TextBoxFor(x => x.Employee, new { @class = "form-control" })*@
        @Html.DropDownListFor(x => x.TBLEMPLOYEE.EmployeeID, (List<SelectListItem>)ViewBag.val3, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        @Html.Label("Kitap Alış Tarihi")
        <input type="text" class="form-control" name="AcquisitionDate" value="@DateTime.Now.ToShortDateString()" />
    </div>
    <div style="margin-top:15px">
        @Html.Label("Kitap İade Tarihi")
        <input type="text" class="form-control" name="ReturnDate" value="@DateTime.Now.AddDays(7).ToShortDateString()" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-group" style="background-color:#a330b5; color:white">Kitabı Ödünç Ver</button>
        <input type="hidden" value="False" name="TransactionStatus" />
    </div>
</form>