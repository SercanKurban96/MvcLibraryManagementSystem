@model MvcLibraryManagementSystem.Models.Entity.TBLCATEGORY
@{
    ViewBag.Title = "CategoryBring";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kategori Güncelleme Sayfası</h2>
@using (Html.BeginForm("CategoryEdit", "Category", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @Html.HiddenFor(x => x.CategoryID)
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-warning">Kategori Güncelle</button>
    </div>
}