@model MvcLibraryManagementSystem.Models.Entity.TBLEMPLOYEE
@{
    ViewBag.Title = "EmployeeBring";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Personel Güncelleme Sayfası</h2>
@using (Html.BeginForm("EmployeeEdit", "Employee", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @Html.HiddenFor(x => x.EmployeeID)
        @Html.Label("Personel Adı Soyadı")
        @Html.TextBoxFor(x => x.EmployeeName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.EmployeeName, "", new { @style = "color:red" })
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-warning">Personel Güncelle</button>
    </div>
}